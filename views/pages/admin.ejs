<!doctype html>
<html>
    <head>
        <% include ../partials/head %>
    </head>
    <body>
        <div id="wrapper">
            <!-- Sidebar -->
            <div id="sidebar-wrapper">
                <ul class="sidebar-nav">
                    <li class="sidebar-brand">
                        <h1>Test</h1>
                    </li>
                    <li>
                        <a href="#">Surveys</a>
                    </li>
                </ul>
                <ul id="surveys" class="sidebar-nav">
                </ul>
            </div>
            <!-- /#sidebar-wrapper -->

            <!-- Page Content -->
            <div id="page-content-wrapper">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <h1>Surveys</h1>

                            <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
                            <a href="#create_survey" class="btn btn-default">new survey</a>
                            <div id="surveys"></div>


                            <form role="form" id="create_survey">

                                <div class="form-group">
                                    <label for="survey_title">title</label>
                                    <input type="text" name="TODO"
                                    class="form-control" id="survey_title" />
                                </div>

                                <fieldset>
                                    <legend>question</legend>
                                    <input type="text" name="TODO"
                                    class="form-control" id="TODO" />
                                </fieldset>

                                <fieldset>
                                    <legend>answers</legend>
                                    <input type="text" name="TODO"
                                    class="form-control" id="TODO" />
                                </fieldset>
                                <button type="submit" class="btn
                                btn-default">Submit</button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
            <!-- /#page-content-wrapper -->

        </div>
        <!-- /#wrapper -->

        <script src="/static/js/jquery-1.11.3.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
        <script src="/socket.io/socket.io.js"></script>
        <script>
var socket = io();

socket.on('surveys', function(surveys) {
    document.getElementById('surveys').remove();
    var surveys_ul = document.createElement('ul');
    surveys_ul.setAttribute('id', 'surveys');
    surveys_ul.setAttribute('class', 'sidebar-nav');

    document.getElementById('sidebar-wrapper').appendChild(surveys_ul);

    for(var i=0; i < surveys.length; i++) {
        var survey_li = document.createElement('li');
        survey_li.innerHTML = '<a href="">' + surveys[i]['name'] + '</a>';
        document.getElementById('surveys').appendChild(survey_li);
    };
});


$("#create_survey").click(function(e) {
    e.preventDefault();
    socket.emit('create_survey', 'cccc');
});
        </script>

        <!-- Menu Toggle Script -->
        <script>
$("#menu-toggle").click(function(e) {
    e.preventDefault();
    $("#wrapper").toggleClass("toggled");
});
        </script>
    </body>
</html>
