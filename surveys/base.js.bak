exports.get_polls = function(req, res) {
    db.polls.find(function(err, polls){
        if(err || !polls) {
            console.log('No polls found');
        } else {
            polls.forEach(function(foundPolls) {
                console.log(foundPolls);
                res.send(foundPolls);
            });
        }
    });
};

